doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    style(type='text/css' rel='stylesheet' media='all').
      /* Typography */
      .logo{
        font-family: "GorditaBold", sans-serif;
        font-weight: 700;
        font-size: 20px;
        line-height: 2.36;
        color: #1E1E1E;
        text-decoration: none;
      }
      .logo-sub{
        font-family: "GorditaRegular", sans-serif;
        font-weight: 300;
        font-size: 16px;
        color: #D7D7D7;
        text-decoration: none;
      }
      .title-1{ }
      .txt-l{ text-align: left; }
      .txt-c{ text-align: center; }
      .txt-j{ text-align: justify; }
      .txt-r{ text-align: right; }
      /* General */
      body {
        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        /*background-color: #FAFAFA;*/
        font-family: "GorditaRegular", sans-serif;
        font-size: 14px;
        font-weight: 400;
        color: #212121;
      }
      * {
        box-sizing: border-box;
        -moz-box-sizing: border-box;
      }
      /* Grid */
      .grid{
        /*display: flex;*/
      }
      .grid .col{ float: left; }
      .grid .col.w-1-3{ width: 33.33%; }
      .grid .col.w-2-3{ width: 66.66%; }
      .grid .col .col-inner{ padding: 0 10px; }
      .grid .col:nth-child(1) .col-inner{
        padding-left: 0;
      }
      .grid .col:last-child .col-inner{
        padding-right: 0;
      }
      /* Box */
      .box{
        border: 1px solid #D7D7D7;
        border-style: solid;
        border-width: 1px;
        border-color: #D7D7D7;
        border-radius: 4px;
        padding: 20px;
        margin-bottom: 20px;
      }
      .box-title{
        font-family: "GorditaMedium", sans-serif;
        font-size: 20px;
        line-height: 26px;
        text-align: left;
        color: #212121;
      }
      .box-body{
        margin: 40px 0 10px 0;
      }
      .box-row{
        position: relative;
        /*display: flex;*/
        margin-bottom: 30px;
      }
      .date-holder {
        height: auto;
        min-height: 100%;
        min-width: 63px;

        position: absolute;
        top: 0;
        left: 0;
      }
      .date-start{
        position: absolute;
        top: 0;
        left: 0;
      }
      .date-year {
        font-family: "GorditaMedium", sans-serif;
        font-size: 16px;
        line-height: 21px;
        text-align: left;
        color: #888;
      }
      .date-month {
        font-family: "GorditaMedium", sans-serif;
        font-size: 12px;
        line-height: 16px;
        text-align: left;
        color: #888888;
      }
      .date-separator {
        /*margin: 20px auto;*/
        width: 1px;
        /*height: calc(100% - 120px);*/
        /*min-height: 10px;*/
        background-color: #e6e6e6;
        position: absolute;
        top: 60px;
        bottom: 60px;
        left: 40%;
      }
      .date-end{
        position: absolute;
        bottom: 0;
        left: 0;
      }
      .content-holder {
        display: inline-block;
        /*margin-left: 20px;*/
        padding-left: 80px;
      }
      .title-holder{}
      .title-holder .title {
        font-family: "GorditaMedium", sans-serif;
        font-size: 14px;
        line-height: 19px;
        text-align: left;
        color: #212121;
        margin-bottom: 2px;
      }
      .title-holder .subtitle {
        font-family: "GorditaRegular", sans-serif;
        font-size: 12px;
        line-height: 16px;
        text-align: left;
        color: #888;
        margin-bottom: 2px;
      }
      .details-holder {
        font-family: "GorditaRegular", sans-serif;
        font-size: 14px;
        line-height: 21px;
        text-align: left;
        color: #212121;
        margin-bottom: 5px;
      }
      .details-holder ul {
        padding: 20px 0 0 20px;
        margin: 0;
      }
      .details-holder ul li {
        font-family: "GorditaRegular", sans-serif;
        font-size: 14px;
        line-height: 21px;
        text-align: left;
        color: #212121;
        margin-bottom: 5px;
      }
      /* Page styles */
      .page {}
      .page-inner {}
      .page-head{
        margin-bottom: 40px;
      }
      .page-body{}
      /* Personal info Box */
      .personal-info{ text-align: center; }
      .personal-info .icon { margin-right: 7px; }
      .profile-img-holder {
        margin-bottom: 32px;
      }
      .profile-img{
        width: 96px;
        height: 96px;
        margin: 0 auto;
        border-radius: 100%;
      }
      .user-fullname {
        font-family: "GorditaMedium", sans-serif;
        text-align: center;
        font-size: 16px;
        line-height: 21px;
        color: #444;
        margin-bottom: 16px;
      }
      .user-title {
        font-family: "GorditaMedium", sans-serif;
        text-align: center;
        font-size: 14px;
        line-height: 19px;
        color: #666;
        margin-bottom: 8px;
      }
      .user-subtitle {
        font-family: GorditaRegular,sans-serif;
        font-size: 12px;
        line-height: 16px;
        text-align: center;
        color: #888;
        margin-bottom: 8px;
      }
      .user-address {
        margin-top: 24px;
        /*display: flex;
        align-items: center;
        justify-content: center;*/
        font-size: 13px;
        color: #666;
      }
      .user-worktime {
        margin-top: 8px;
        /*display: flex;
        align-items: center;
        justify-content: center;*/
        font-size: 13px;
        color: #666;
      }
      .user-worktime > *, .user-address > * {
        display: inline-block;
        vertical-align: middle;
      }
      /* Skills box */
      table.skills-table {
        width: 100%;
        border: none;
      }
      table.skills-table thead tr th, .skill-type {
        font-family: "GorditaMedium", sans-serif !important;
        font-size: 12px !important;
        color: rgba(0,0,0,.5) !important;
        text-align: left !important;
        padding-bottom: 10px !important;
      }
      table.skills-table thead tr th:nth-child(2) { text-align: right; }
      table.skills-table tbody tr td {
        font-family: "GorditaRegular", sans-serif;
        font-size: 14px;
        color: #212121;
        text-align: left;
        padding-bottom: 5px;
      }
      table.skills-table tbody tr td:nth-child(2) { text-align: right; }
  body
    div(class="wrap")
      div(class="page")
        div(class="page-inner")
          div(class="page-head")
            div(class="txt-r")
              div(class="logo") Turing
              div(class="logo-sub") Developer Resume
          div(class="page-body")
            div(class="grid")
              div(class="col w-1-3")
                div(class="col-inner")
                  div(class="box personal-info")
                    div(class="box-title") Personal info
                    div(class="box-body")
                      div(class="profile-img-holder")
                        img(class="profile-img" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="Sample profile img" width="" height="")
                      div(class="user-fullname") #{userInfo.full_name}
                      div(class="user-title") #{userInfo.role} Engineer with #{userInfo.years_of_experience} years of experience
                      div(class="user-subtitle") #{userInfo.years_of_working_remotely} years of remote work experience
                      div(class="user-address")
                        img(class="icon" src="data:image/png;base64," alt="" width="16" height="16")
                        span(class="txt") Croatia
                      div(class="user-worktime")
                        img(class="icon" src="data:image/png;base64," alt="" width="16" height="16")
                        span(class="txt") 08:00 AM - 04:00 PM PDT
                  div(class="box skills")
                    div(class="box-title") Skills
                    div(class="box-body")
                      table(class="skills-table")
                        tbody
                          tr
                            td(colspan="2" class="skill-type") Frontend
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Backend
                          each skill in userSkills['Back End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Database
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Cloud-Technologies
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Container-Technologies
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Version Control
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Concepts
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
                          tr
                            td(colspan="2")
                          tr
                            td(colspan="2" class="skill-type") Project Management
                          each skill in userSkills['Front End']
                            tr
                              td= skill.skill_name
                              td= skill.score
                                span &nbsp; yrs
              div(class="col w-2-3")
                div(class="col-inner")
                  div(class="box")
                    div(class="box-title") Experience
                    div(class="box-body")
                      each experience in userExperience
                        div(class="box-row")
                          div(class="date-holder")
                            div(class="date-start")
                              div(class="date-month") #{experience.end_month}
                              div(class="date-year") #{experience.end_year}
                            div(class="date-separator")
                            div(class="date-end")
                              div(class="date-month") #{experience.start_month}
                              div(class="date-year") #{experience.start_year}
                          div(class="content-holder")
                            div(class="title-holder")
                              div(class="title") #{experience.position}
                              div(class="subtitle") #{experience.company}
                            div(class="details-holder")
                              ul
                                each detail in experience.details
                                  li
                                    | #{detail}
                              div(style='clear: both;')
                  div(class="box")
                    div(class="box-title") Projects
                    div(class="box-body")
                      each project in userProjects
                        div(class="box-row")
                          div(class="date-holder")
                            div(class="date-start")
                              div(class="date-month") #{project.end_month}
                              div(class="date-year") #{project.end_year}
                            div(class="date-separator")
                            div(class="date-end")
                              div(class="date-month") #{project.start_month}
                              div(class="date-year") #{project.start_year}
                          div(class="content-holder")
                            div(class="title-holder")
                              div(class="title") #{project.project_name}
                            div(class="details-holder")
                              ul
                                each detail in project.details
                                  li
                                    | #{detail}
                          div(style='clear: both;')
                  div(class="box")
                    div(class="box-title") Education
                    div(class="box-body")
                      each education in userEducation
                        div(class="box-row")
                          div(class="date-holder")
                            div(class="date-start")
                              div(class="date-month") #{education.end_month}
                              div(class="date-year") #{education.end_year}
                          div(class="content-holder")
                            div(class="title-holder")
                              div(class="title") #{education.degree}
                              div(class="subtitle") #{education.college}
                          div(style='clear: both;')
                  div(class="box")
                    div(class="box-title") Certification & Awards
                    div(class="box-body")
                      each certification in userCertifications
                        div(class="box-row")
                          div(class="date-holder")
                            div(class="date-start")
                              div(class="date-year") #{certification.year}
                          div(class="content-holder")
                            div(class="title-holder")
                              div(class="title") #{certification.name}
                          div(style='clear: both;')
